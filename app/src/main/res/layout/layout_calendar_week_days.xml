<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTitleWeekContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDayOfWeek1"
        style="@style/WeekDayTitleStyle"
        android:tag="dayOfWeek1"
        android:text="@string/cdrp_sun" />

    <TextView
        android:id="@+id/tvDayOfWeek2"
        style="@style/WeekDayTitleStyle"
        android:tag="dayOfWeek2"
        android:text="@string/cdrp_mon" />

    <TextView
        android:id="@+id/tvDayOfWeek3"
        style="@style/WeekDayTitleStyle"
        android:tag="dayOfWeek3"
        android:text="@string/cdrp_tue" />

    <TextView
        android:id="@+id/tvDayOfWeek4"
        style="@style/WeekDayTitleStyle"
        android:tag="dayOfWeek4"
        android:text="@string/cdrp_wed" />

    <TextView
        android:id="@+id/tvDayOfWeek5"
        style="@style/WeekDayTitleStyle"
        android:tag="dayOfWeek5"
        android:text="@string/cdrp_thu" />

    <TextView
        android:id="@+id/tvDayOfWeek6"
        style="@style/WeekDayTitleStyle"
        android:tag="dayOfWeek6"
        android:text="@string/cdrp_fri" />

    <TextView
        android:id="@+id/tvDayOfWeek7"
        style="@style/WeekDayTitleStyle"
        android:tag="dayOfWeek7"
        android:text="@string/cdrp_sat" />

</LinearLayout>